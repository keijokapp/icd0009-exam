@model IEnumerable<Domain.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-md-1">
            <label class="control-label">Find: </label>
        </div>
        <div class="col-md-2">
            <input name="search" value="@ViewBag.search" class="form-control"/>
        </div >
        <div class="col-md-4">
            <input type="submit" value="Search" class="btn btn-primary"/>
            <a asp-action="Index" asp-controller="Books" class="btn btn-danger">Reset</a>
        </div >
    </div>
</form>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishingYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th>
            Authors
        </th>
        <th>
            Comments
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishingYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
            </td>
            <td>
                <ul>

                    @foreach (var bookAndAuthor in item.BookAndAuthors)
                    {
                        <li>@bookAndAuthor.Author.FirstLastName</li>
                    }
                </ul>
            </td>
            <td>
                @item.Comments.Count
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>